<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head') %>
        <link rel="stylesheet" href="/styles/restaurants.css">
        <title>Eatwell</title>
</head>

<body>
    <%- include('includes/header') %>
        <main>
            <h1>Recommended restaurants</h1>
            <div class="restaurants-box">
                <h3 id="restaurant-title">
                    <%= restaurant.name %>
                </h3>
                <p class="restaurant-text">
                    <%= restaurant.address %>
                </p>
                <p class="restaurant-text">
                    <%= restaurant.typeOfCusines %>
                </p>
                <p id="restaurant-description">
                    <%= restaurant.reason %>
                </p>
                <p id="button"><button><a href="/restaurants/<%= restaurant.website %>">View Website</a></button>
                </p>
            </div>
        </main>
        <%- include('includes/footer') %>
</body>

</html>